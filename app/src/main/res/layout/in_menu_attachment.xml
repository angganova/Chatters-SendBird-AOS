<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/CLAttachMenu"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:elevation="2dp"
                                                   android:background="@drawable/vrc_nb_white10"
                                                   android:layout_margin="2dp">

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btDoc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/btAudio"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btCam"
            app:layout_constraintBottom_toTopOf="@+id/btAudio"
            android:background="@color/transparent"
            app:layout_constraintDimensionRatio="1:1" android:src="@drawable/as_doc" android:scaleType="centerInside"
            android:textAlignment="center" android:paddingBottom="16dp"/>
    <TextView
            android:text="Document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvDoc"
            app:layout_constraintBottom_toBottomOf="@+id/btDoc" app:layout_constraintEnd_toEndOf="@+id/btDoc"
            app:layout_constraintStart_toStartOf="@+id/btDoc"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btCam"
            app:layout_constraintTop_toTopOf="@+id/btDoc" app:layout_constraintStart_toEndOf="@+id/btDoc"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btGallery"
            app:layout_constraintDimensionRatio="w,1:1"
            android:background="@color/transparent" android:src="@drawable/as_cam" android:scaleType="centerInside"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btDoc" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCam"
            app:layout_constraintBottom_toBottomOf="@+id/btDoc"
            app:layout_constraintStart_toStartOf="@+id/btCam"
            app:layout_constraintEnd_toEndOf="@+id/btCam"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btGallery"
            app:layout_constraintTop_toTopOf="@+id/btCam" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/btCam"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@color/transparent" android:src="@drawable/as_gallery"
            android:scaleType="centerInside" android:paddingBottom="16dp" app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="@+id/btDoc"/>
    <TextView
            android:text="Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvGallery"
            app:layout_constraintBottom_toBottomOf="@+id/btDoc"
            app:layout_constraintStart_toStartOf="@+id/btGallery"
            app:layout_constraintEnd_toEndOf="@+id/btGallery"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btAudio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btDoc" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btLoc" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent" android:src="@drawable/as_audio" android:scaleType="centerInside"
            android:paddingBottom="16dp" app:layout_constraintDimensionRatio="w,1:1"/>
    <TextView
            android:text="Audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAudio"
            app:layout_constraintBottom_toBottomOf="@+id/btAudio"
            app:layout_constraintStart_toStartOf="@+id/btAudio"
            app:layout_constraintEnd_toEndOf="@+id/btAudio"
    />
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btLoc"
            app:layout_constraintTop_toTopOf="@+id/btAudio" app:layout_constraintStart_toEndOf="@+id/btAudio"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btContact"
            android:background="@color/transparent" android:src="@drawable/as_location"
            android:scaleType="centerInside" android:paddingBottom="16dp" app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="@+id/btAudio" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvLocation"
            app:layout_constraintBottom_toBottomOf="@+id/btAudio"
            app:layout_constraintStart_toStartOf="@+id/btLoc"
            app:layout_constraintEnd_toEndOf="@+id/btLoc"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btContact"
            app:layout_constraintTop_toTopOf="@+id/btAudio" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/btLoc"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@color/transparent" android:src="@drawable/as_contact"
            android:scaleType="centerInside" android:paddingBottom="16dp" app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="@+id/btAudio"/>
    <TextView
            android:text="Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvContact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btContact"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/btContact"
    />

</androidx.constraintlayout.widget.ConstraintLayout>